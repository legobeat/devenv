#!/bin/bash
export RUNNER_IMAGE=${YARN_RUNNER_IMAGE:-${NODE_RUNNER_IMAGE:-${RUNNER_IMAGE}}}
#if [[ -n "${RUNNER_VOLS}" ]]; then
#  export RUNNER_VOLS="${RUNNER_VOLS} "
#fi
#export RUNNER_VOLS="${RUNNER_VOLS}${L7_NODE_CACHE_DIR}/yarn/cache/berry:/home/node/.yarn/cache/berry:z "
#export RUNNER_VOLS="${RUNNER_VOLS}${L7_NODE_CACHE_DIR}/yarn/cache/classic:/home/node/.cache/yarn:z"
export RUNNER_ENV="${RUNNER_ENV}"
export RUNNER_OPTS="${RUNNER_OPTS}"
export RUNNER_VOLS="${RUNNER_VOLS}"
if [[ -n "${YARN_VERSION}" ]]; then
  exec l7-run-node "/home/node/.cache/node/corepack/v1/yarn/${YARN_VERSION}/bin/yarn" ${@}
else
  exec l7-run-node yarn ${@}
fi
