#!/bin/bash
export RUNNER_OPTS="${RUNNER_OPTS} -t "
export RUNNER_IMAGE=${NPM_RUNNER_IMAGE:-${NODE_RUNNER_IMAGE:-${RUNNER_IMAGE}}}
export RUNNER_VOLS="${RUNNER_VOLS} ${L7_NODE_CACHE_DIR}/npm/cache:/home/node/.npm/_cacache"
if [[ -n "${NPM_VERSION}" ]]; then
  l7-run-node "/home/node/.cache/node/corepack/v1/npm/${NPM_VERSION}/bin/npm" ${@}
else
  l7-run-node npm ${@}
fi
